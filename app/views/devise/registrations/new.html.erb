<%# Sign_up%>
<div class="main-new">
  <div class="new-card">
    <div class="new-logo">
        <%# <%= image_tag("logo-perspective-OR") %>
    </div>
    <h2>Créer mon compte</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-inputs2">

        <div class="form-inline2">
          <%= f.input :first_name,
              label: "Nom",
              required: false,
              autofocus: true,
              wrapper_html: { class: "form-group-inline" },
              input_html: { class: "form-input-inline", placeholder: "Dupont" },
              label_html: { class: "form-label-inline" }
          %>
        </div>

        <div class="form-inline2">
          <%= f.input :last_name,
              label: "Prénom",
              required: false,
              autofocus: true,
              wrapper_html: { class: "form-group-inline" },
              input_html: { class: "form-input-inline", placeholder: "Albert" },
              label_html: { class: "form-label-inline" }
          %>
        </div>

        <div class="form-inline2">
          <%= f.input :email,
              label: "Adresse e-mail",
              required: false,
              autofocus: true,
              wrapper_html: { class: "form-group-inline" },
              input_html: { class: "form-input-inline", placeholder: "albert.dupont@gmail.com" },
              label_html: { class: "form-label-inline" }
          %>
        </div>

        <div class="form-inline2">
          <%= f.input :password,
              label: "Mot de passe",
              required: false,
              input_html: { autocomplete: "current-password" },
              wrapper_html: { class: "form-group-inline" },
              input_html: { class: "form-input-inline", placeholder: "**********" },
              label_html: { class: "form-label-inline" }
          %>
        </div>

        <div class="form-inline2">
          <%= f.input :password,
              label: "Confirmer mon mot de passe",
              required: false,
              input_html: { autocomplete: "current-password" },
              wrapper_html: { class: "form-group-inline" },
              input_html: { class: "form-input-inline", placeholder: "**********" },
              label_html: { class: "form-label-inline" }
          %>
        </div>


        <div class="main-button2">
          <%= f.button :submit, "Créer mon compte" %>
        </div>
      </div>
  </div>
    <% end %>
</div>

<div>
<div class="image-femme"></div>
</div>
