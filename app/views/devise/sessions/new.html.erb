    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">


        <div class="form-inline">
          <%= f.input :email,
              label: "email",
              required: false,
              autofocus: true,
              wrapper_html: { class: "form-group-inline" },
