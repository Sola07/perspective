<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" id="text-popup">
        <h1 class="popfont" id="exampleModalLabel">Je donne un nom à ma simulation</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @simulation, url: update_name_path(@simulation), data: { turbo: false }, method: :patch do |f| %>
        <%= f.input :name %>
        <div class="modal-footer">
        <button type="button" class="button-popup-close" data-bs-dismiss="modal">Annuler</button>
        <%= f.button :submit, "Sauvegarder", class: "button-popup" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



