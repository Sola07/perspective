<div class="main-container">

<h2 class="title">Votre projet page 3 - Recettes locatives</h2>

<div class="form-container">

<%= simple_form_for @simulation, url: update_second_step_simulation_path(@simulation), data: { turbo: false}, method: :patch do |f| %>

<div class="form-inline">
  <%= f.input :loyer_hc,
       label: "Loyer mensuel escompté HC",
       wrapper_html: { class: "form-group-inline" },
       input_html: { class: "form-input-inline", placeholder: "Ex : 1 200" },
       label_html: { class: "form-label-inline" }
  %><p class="text-space"><strong>€</strong></p>
</div>

<div class="form-inline">
  <%= f.input :charges_locatives,
       label: "Charges locatives mensuelles estimées",
       wrapper_html: { class: "form-group-inline" },
       input_html: { class: "form-input-inline", placeholder: "Ex : 200" },
       label_html: { class: "form-label-inline" }
  %><p class="text-space"><strong>€</strong></p>
</div>


</div>

  <div class="form-inline-btn">
    <div class="progress-container">
      <div class="progress-bar-p3"></div>
  </div>

    <%= f.button :submit, "Suivant", class: "main-button" %>

  </div>
<% end %>
</div>
